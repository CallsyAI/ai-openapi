{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
